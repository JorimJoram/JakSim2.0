{{>layout/header}}
<script src="/javascript/payment/kakaoPay/success.js"></script>
<link rel="stylesheet" href="/css/payment/paymentSuccess.css">
<link rel="stylesheet" href="/css/payment/modal.css">
<link rel="stylesheet" href="/css/mainStyle.css">
</head>
<body>
<div id="modal_navi">
    작심득근
</div>
<div id="title">
    <hr>
    <div id="content">
            결제 내역
    </div>
    <hr>
    <div class="wrapper">
        <div class="payment_form">
            <span class="jaksim_font">상품명</span><span id="item_name" class="value_font">{{name}}</span><br>
            <span class="jaksim_font">PT 횟수</span><span id="ptTimes" class="value_font"> : {{cnt}}</span><br>
            <span class="jaksim_font">PT 기간</span><span id="ptPeriod" class="value_font"> : {{period}}</span><br>
            <span class="jaksim_font">결제 금액</span><span id="amount" class="value_font"> : {{price}}</span><br>
            <span class="jaksim_font">결제 수단</span><span id="payment_method_type" class="value_font"> : {{method}}</span><br>
            <span class="jaksim_font">결제 일자</span><span id="approved_at" class="value_font"> : {{date}}</span><br>
        </div>
        <div class="image">
            <img src="/image/payment.png">
        </div>
    </div>
    <button class="jaksim_btn" id="paymentDetailsBtn" type="button">
        결제 상세 내역
    </button>
</div>
{{>layout/footer}}