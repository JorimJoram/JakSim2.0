{{>layout/header}}
    <link rel="stylesheet" href="/css/account/accountStyle.css">
    <script src="/javascript/account/account_3.js"></script>
</head>

<body>
{{>layout/navi}}

    <div class="container">
        <h1 class="account_banner">여기다가 로고라도\n붙여주셈</h1>
        <div class="account_container">

            <div><span class="account_span">전화번호</span></div>
            <div class="input_container">
                <input type="tel" class="account_input" placeholder="Tel" id="account_tel">
                <button class="account_button" type="button" id="account_phone_button">인증하기</button>
                <span id="account_phone_span" style="margin-bottom: 50px;"></span>
            </div>


            <div>
                <span class="account_span">이메일</span>
            </div>

            <div class="input_container">
                <input class="account_input" type="text" placeholder="Email" id="account_email"/>
                <button class="account_button" type="button" id="account_email_button">인증하기</button>
            </div>
            <span style="color:red;" id="account_email_counter"></span>

            <div class="input_container" id="account_code_container">
                <div id="account_codespan_container"></div>
            </div>
            <a class="btn btn-secondary" href="/account/2">이전</a>
            <button id="account_3_next" class="btn btn-primary" disabled>확인</button>
        </div>
    </div>

{{>layout/footer}}